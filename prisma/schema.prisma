generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Column {
  id      String  @id @default(uuid())
  title   String
  userId  String
  tasks   Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String
  columnId    String
  column      Column   @relation(fields: [columnId], references: [id])
  userId      String   // Added: link each task to a Clerk user
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
